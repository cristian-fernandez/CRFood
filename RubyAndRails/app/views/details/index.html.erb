<p id="notice"><%= notice %></p>

<h1>Listing Details</h1>

<table>
  <thead>
    <tr>
      <th>Idfood</th>
      <th>Description</th>
      <th>Ingredients</th>
      <th>Directions</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.idFood %></td>
        <td><%= detail.description %></td>
        <td><%= detail.ingredients %></td>
        <td><%= detail.directions %></td>
        <td><%= detail.history %></td>
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

